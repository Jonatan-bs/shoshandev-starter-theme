{
	"name": "wordpress-template",
	"version": "1.0.0",
	"description": "",
	"license": "UNLICENSED",
	"scripts": {
		"watch:frontend": "npx postcss src/css/frontend/index.css -o build/css/main.css --watch",
		"watch:gutenberg": "npx postcss src/css/gutenberg/index.css -o build/css/gutenberg.css --watch",
		"build": "NODE_ENV=production npx postcss src/css/frontend/index.css -o build/css/main.css --minify && NODE_ENV=production npx postcss src/css/gutenberg/index.css -o build/css/gutenberg.css --minify"
	},
	"devDependencies": {
		"autoprefixer": "^10.3.4",
		"postcss": "^8.3.6",
		"postcss-cli": "^8.3.1",
		"tailwindcss": "^2.2.9",
		"postcss-import": "^14.0.2",
		"precss": "^4.0.0"
	}

}
